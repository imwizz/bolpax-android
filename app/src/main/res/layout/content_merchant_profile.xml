<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relative_header"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Profile"
            android:textColor="#ffffff"
            android:id="@+id/text_header"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_header"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_profile"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:src="@drawable/store"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/image_name"
            android:layout_marginTop="33dp"
            android:src="@drawable/store"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_below="@+id/image_profile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/text_name"
            android:textColor="#000000"
            android:paddingLeft="20dp"
            android:layout_alignBottom="@+id/image_name"
            android:layout_toRightOf="@+id/image_name"
            android:layout_toEndOf="@+id/image_name" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/image_balance"
            android:src="@drawable/wallet"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/image_name"
            android:layout_alignStart="@+id/image_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/text_balance"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/image_balance"
            android:layout_toRightOf="@+id/image_balance"
            android:layout_toEndOf="@+id/image_balance" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/image_email"
            android:layout_marginTop="28dp"
            android:src="@drawable/mail"
            android:layout_below="@+id/image_balance"
            android:layout_alignLeft="@+id/image_balance"
            android:layout_alignStart="@+id/image_balance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/text_email"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/image_email"
            android:layout_toRightOf="@+id/image_email"
            android:layout_toEndOf="@+id/image_email" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/image_phone"
            android:layout_marginTop="24dp"
            android:src="@drawable/call"
            android:layout_below="@+id/image_email"
            android:layout_alignLeft="@+id/image_email"
            android:layout_alignStart="@+id/image_email" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/text_phone"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/image_phone"
            android:layout_toRightOf="@+id/image_phone"
            android:layout_toEndOf="@+id/image_phone" />


    </RelativeLayout>
</RelativeLayout>
